<!DOCTYPE html>
<html>
  <head>
    <title>Arttrack</title>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <%= render 'layouts/navbar' %>
    <div class="page-wrap blue">
      <%= render 'layouts/sidebar' %>

      <div class="dashboard-right">
        <% if flash[:notice] %>
          <div class="flash-shift flash-notice"><%= flash[:notice] %></div>
        <% end %>
        <% if flash[:alert] %>
          <div class="flash-shift flash-alert"><%= flash[:alert] %></div>
        <% end %>
        <% if flash[:warning] %>
          <div class="flash-shift flash-warning"><%= flash[:warning] %></div>
        <% end %>
        <% if flash[:error] %>
          <div class="flash-shift flash-error"><%= flash[:error] %></div>
        <% end %>
        <% if flash[:success] %>
          <div class="flash-shift flash-success"><%= flash[:success] %></div>
        <% end %>
        <%= yield %>
      </div>
    </div>
    <%= render 'layouts/awesome_footer' %>
  </body>
</html>
