<div class="background-ghost">
  <div class="cards">
    <div class="card login-window">
      <div class="some-height-padding login">
        <h1>Log In</h1>
        <div class="login-form">
          <%= form_tag login_path do %>
            <p>
            <div class="no-ghost">  <%= email_field_tag :email, nil, placeholder: 'Email', id: "login-boxes" %></div>
            </p>

            <p class="no-ghost">
              <%= password_field_tag :password, nil, placeholder: 'Password', id: "login-boxes" %>
            </p>

            <%= submit_tag'Log In' %>
        </div>
          <br />
        <div>
          <p>For new users, sign up <%= link_to "here", signup_path %></p>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
